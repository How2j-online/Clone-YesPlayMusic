{
  "extends": ["@commitlint/config-conventional","cz"],
  "rules": {
    "type-empty": [0, "never"],
    "subject-empty": [0, "never"],
    "type-enum": [
      2,
      "always",
      [
        "docs",
        "chore",
        "feat",
        "fix",
        "merge",
        "improvement",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "ci",
        "build",
        "develop"
      ]
    ]
  }
}
